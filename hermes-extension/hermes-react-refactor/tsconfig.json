{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "allowJs": true,
    "checkJs": false,
    "outDir": "dist",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@hermes/core": ["../../packages/core/src"],
      "@hermes/core/*": ["../../packages/core/src/*"]
    },
    "types": ["chrome", "node"]
  },
  "include": ["src/**/*"]
}
