{
  "manifest_version": 3,
  "name": "Hermes Serverless Extension",
  "version": "1.0.0",
  "description": "Offline demo of the Hermes extension without build tools.",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Hermes Serverless"
  }
}
