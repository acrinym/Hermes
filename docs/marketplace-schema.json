{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Hermes Plugin Manifest",
  "type": "object",
  "properties": {
    "plugins": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "description", "version", "downloadUrl"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Plugin name"
          },
          "description": {
            "type": "string",
            "description": "Short summary of the plugin"
          },
          "version": {
            "type": "string",
            "description": "Semantic version of the plugin"
          },
          "downloadUrl": {
            "type": "string",
            "format": "uri",
            "description": "URL to download the plugin bundle"
          }
        }
      }
    }
  },
  "required": ["plugins"]
}
